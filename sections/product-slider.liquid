{% liquid
    assign products = section.settings.products
  %}
  
  <section>
    <header>
      <h2>{{ section.settings.heading }}</h2>
      {% if section.settings.cta != blank and section.settings.cta_link != blank %}
        <a href="{{ section.settings.cta_link }}">{{ section.settings.cta }}</a>
      {% endif %}
    </header>
  
      <div>
        {% for product in products %}
          {% render 'product-card', product: product %}
        {% endfor %}
      </div>
  </section>
  
  {% schema %}
  {
    "name": "t:sections.product_slider.name",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Featured Products"
      },
      {
        "type": "text",
        "id": "cta",
        "label": "CTA",
        "default": "Shop Now"
      },
      {
        "type": "url",
        "id": "cta_link",
        "label": "CTA Link",
        "default": "/collections/all"
      },
      {
        "type": "product_list",
        "id": "products",
        "label": "Products",
        "limit": 10
      }
    ],
    "presets": [
      {
        "name": "t:sections.product_slider.name"
      }
    ]
  }
  {% endschema %}
  